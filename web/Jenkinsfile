pipeline {
    agent {
        docker {
            image 'anacdamico/ruby-web-agent'
            args '--network rocklov-network'
        } 
    }

    stages {
        stage('Preparation') {
            steps {
                sh 'cd web && bundle install'
            }
        }
        stage('Testing Web') {
            steps {
                sh  'cd web && rake seeds'
            }
        }
    }

    post {
        always {
           echo "todo"
        }
    }
}